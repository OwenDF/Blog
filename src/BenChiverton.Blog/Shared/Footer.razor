@inject IJSRuntime JsRuntime

<div class="footer-container">
    <button class="source-code-button" @onclick="@(async () => await NavigateToNewTab("https://github.com/benchiverton/Blog"))">
        <img src="/images/GitHub-Mark-32px.png" />
        <div class="source-code-button-text">
            View this sites source code
        </div>
    </button>
</div>

@code {
    private async Task NavigateToNewTab(string url)
    {
        await JsRuntime.InvokeAsync<object>("open", url, "_blank");
    }
}
